<h2 class="text-2xl font-bold text-center text-orange-600 mb-6">Log in</h2>

<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

    <!-- Email Field -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 text-gray-700 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Remember Me Checkbox 
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center mb-4">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
      </div>
    <% end %>-->

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Log in", class: "w-full py-2 px-4 bg-orange-600 text-white font-medium rounded-lg hover:bg-orange-700 transition-colors duration-300" %>
    </div>
  <% end %>

  <!-- Links Section 
 <div class="mt-6 text-center">
    
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline transition-colors duration-300" %>
  -->
    <!-- Sign Up Link 
    <div class="mt-4">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "w-full block py-2 px-4 bg-orange-400 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-300" %>
    </div>-->
  </div>
</div>
