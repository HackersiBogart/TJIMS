<div class="p-6 bg-white shadow-md rounded-lg">
  <p class="text-lg font-semibold text-gray-800 mb-4">Hello, <%= @email %>!</p>

  <% if @resource.try(:unconfirmed_email?) %>
    <p class="text-md text-gray-700 mb-6">
      We're contacting you to notify you that your email is being changed to <span class="font-medium text-orange-500"><%= @resource.unconfirmed_email %></span>.
    </p>
  <% else %>
    <p class="text-md text-gray-700 mb-6">
      We're contacting you to notify you that your email has been changed to <span class="font-medium text-orange-500"><%= @resource.email %></span>.
    </p>
  <% end %>
</div>
