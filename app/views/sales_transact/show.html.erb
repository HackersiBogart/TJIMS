<h1>Order Summary</h1>
<p><strong>Name:</strong> <%= @sales_transact.customer_name %></p>
<p><strong>Email:</strong> <%= @sales_transact.customer_email %></p>
<p><strong>Phone:</strong> <%= @sales_transact.phone_number %></p>
<h2>Items:</h2>
<ul>
  <% @sales_transact.transaction_items.each do |item| %>
    <li><%= item.quantity %> x <%= item.thing.name %> - <%= number_to_currency(item.price * item.quantity) %></li>
  <% end %>
</ul>
<h3>Total: <%= number_to_currency(@sales_transact.total) %></h3>
