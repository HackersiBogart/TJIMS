
<h1 class="text-4xl font-bold text-center mb-2 text-orange-600 mt-32">Select Brand</h1>
<div class="flex flex-wrap justify-center gap-6 md:gap-10 px-4 " >
  
  <% @main_color.each do |color| %>
    <%= link_to premadecolor_path(color), class: "group w-40 sm:w-52 md:w-64" do %>
      <div class="flex flex-col items-center mb-6 md:mb-8">
        <h2 class="text-white font-semibold text-lg md:text-xl text-center mb-3 md:mb-4 group-hover:text-indigo-600 transition duration-300 ease-in-out"><%= color.name %></h2>
        <div class="w-full h-40 sm:h-52 md:h-64 bg-white shadow-md rounded-lg overflow-hidden transition-transform transform hover:scale-105 hover:shadow-lg">
          <%= color.image.present? ? image_tag(color.image, class: "w-full h-full object-cover") : image_tag("http://via.placeholder.com/512", class: "w-full h-full object-cover") %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
