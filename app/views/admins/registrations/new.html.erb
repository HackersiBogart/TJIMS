<h2 class="text-2xl font-bold text-center text-orange-600 mb-6">Sign up</h2>

<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>

    <!-- Error Messages -->
    <%= render "admins/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 mt-1" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 mt-1" %>
    </div>

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Sign up", class: "w-full py-2 px-4 bg-orange-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-300" %>
    </div>

  <% end %>

  <!-- Links Section -->
  <div class="mt-6">
    <%= render "admins/shared/links" %>
  </div>
</div>
