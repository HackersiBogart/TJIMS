<h2 class="text-2xl font-bold text-center text-orange-600 mb-6">Forgot your password?</h2>

<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>

    <!-- Error Messages -->
    <%= render "admins/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-300" %>
    </div>
  <% end %>

  <!-- Links Section -->
  <div class="mt-6 text-center">
    <%= render "admins/shared/links" %>
  </div>
</div>
