<%= form_with(model: [:admin, @admin_order], class: "contents") do |form| %>
  <% if @admin_order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@admin_order.errors.count, "error") %> prohibited this admin_order from being saved:</h2>

      <ul>
        <% @admin_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Checkout</h3>

  <div class="my-5">
    <%= form.label :customer_email %>
    <%= form.text_field :customer_email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

   <div class="mt-4">
    <h3>QR Code:</h3>
    <%= image_tag "qrcode.jpg", alt: "QR Code", class: "mt-2 rounded-lg", style: "max-width: 200px; height: auto;" %>
  </div>

  <div class="mt-4">
    <%= form.label :reference_number, "Reference Number" %>
    <%= form.text_field :reference_number, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mt-4">
    <%= form.label :receipt_image, "Receipt Image" %>
    <%= form.file_field :receipt_image, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mt-4">
    <%= form.label :date_of_retrieval, "Date of Retrieval" %>
    <%= form.date_field :date_of_retrieval, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="my-5" style="display: none;">
    <%= form.label :fulfilled %>
    <%= form.check_box :fulfilled, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
  <div data-controller="cart">
    <div class="my-5">
      <%= form.label :items %>
      <%= form.text_field :items, id: "order_items", readonly: true %>
    </div>
    <div class="my-5">
      <%= form.label :size %>
      <%= form.text_field :size, id: "order_size", readonly: true %>
    </div>
    <div class="my-5">
      <%= form.label :quantity %>
      <%= form.text_field :quantity, id: "order_quantity", readonly: true %>
    </div>
    <div class="my-5">
      <%= form.label :total %>
      <%= form.text_field :total, id: "order_total", readonly: true %>
    </div>
  </div>
</div>


  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>

<% end %>
