<%= form_with(model: [:admin, @admin_order], class: "contents") do |form| %>
  <% if @admin_order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@admin_order.errors.count, "error") %> prohibited this admin_order from being saved:</h2>

      <ul>
        <% @admin_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :customer_email %>
    <%= form.text_field :customer_email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="mt-4">
      <%= form.label :contact_number, "Phone Number" %>
      <%= form.text_field :phone, class: "form-input mt-1 block w-full" %>
    </div>
    <div class="mt-4">
      <%= form.label :reference_number, "Reference Number" %>
      <%= form.text_field :reference_number, class: "form-input mt-1 block w-full" %>
    </div>

    <div class="mt-4">
      <%= form.label :receipt_image, "Receipt Image" %>
      <%= form.file_field :receipt_image, class: "form-input mt-1 block w-full" %>
    </div>

     <div class="mt-4">
      <%= form.label :date_of_retrieval, "Date of Retrieval" %>
      <%= form.date_field :date_of_retrieval, class: "form-input mt-1 block w-full" %>
    </div>

  <div class="my-5">
    <%= form.label :total %>
    <%= form.number_field :total, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
