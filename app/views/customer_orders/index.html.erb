<div class="w-full px-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Customer orders" %>

  <div class="flex flex-col md:flex-row justify-between items-center mb-6">
    <h1 class="font-bold text-3xl md:text-4xl">Placed Orders</h1>
    <%= link_to "New customer order", new_customer_order_path, class: "mt-3 md:mt-0 rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="customer_orders" class="min-w-full">
    <% @customer_orders.each do |customer_order| %>
      <div class="mb-4 border border-gray-300 rounded-lg p-4">
        <%= render customer_order %>
        <p class="mt-2">
          <%= link_to "<i class='fas fa-eye'></i> Show Order".html_safe, customer_order, class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 text-gray-800 hover:bg-gray-400 transition-colors duration-200 inline-block font-medium flex items-center" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
