<%= form_with(model: @customer_order, class: "max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg") do |form| %>
  <% if @customer_order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 rounded-lg mb-5">
      <h2 class="font-semibold mb-2"><%= pluralize(@customer_order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul class="list-disc pl-5">
        <% @customer_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Customer Details Section -->
  <div class="space-y-5">
    <h3 class="text-xl font-semibold text-gray-800">Customer Details</h3>
    
    <div>
      <%= form.label :customer_email, "Email", class: "block font-medium text-gray-700" %>
      <%= form.text_field :customer_email, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :name, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :phone_number, class: "block font-medium text-gray-700" %>
      <%= form.text_field :phone_number, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>
  </div>

  <!-- QR Code and Reference Section -->
  <div class="mt-8 space-y-5">
    <h3 class="text-xl font-semibold text-gray-800">Order Information</h3>
    
    <div>
      <h4>QR Code:</h4>
      <%= image_tag "qrcode.jpg", alt: "QR Code", class: "mt-2 rounded-lg w-48" %>
    </div>

    <div>
      <%= form.label :reference_number, "Reference Number", class: "block font-medium text-gray-700" %>
      <%= form.text_field :reference_number, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :image, "Receipt Image", class: "block font-medium text-gray-700" %>
      <%= form.file_field :image, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :date_of_retrieval, "Date of Retrieval", class: "block font-medium text-gray-700" %>
      <%= form.date_field :date_of_retrieval, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>
  </div>

  <!-- Cart Summary Section -->
  <div class="mt-8 space-y-5" data-controller="cart">
    <h3 class="text-xl font-semibold text-gray-800">Cart Summary</h3>
    
    <div>
      <%= form.label :item, class: "block font-medium text-gray-700" %>
      <%= form.text_field :item, id: "order_items", readonly: true, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= form.label :size, class: "block font-medium text-gray-700" %>
      <%= form.text_field :size, id: "order_size", readonly: true, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= form.label :quantity, class: "block font-medium text-gray-700" %>
      <%= form.text_field :quantity, id: "order_quantity", readonly: true, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= form.label :total, class: "block font-medium text-gray-700" %>
      <%= form.text_field :total, id: "order_total", readonly: true, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
  </div>

  <!-- Confirmation Section -->
  <div class="mt-8">
    <h4 class="font-semibold text-gray-800">Confirmation</h4>
    <div class="mt-2">
      <%= form.label :order_total, "Input the total cost", class: "block font-medium text-gray-700" %>
      <%= form.text_field :order_total, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="mt-8 text-center">
    <%= form.submit "Place Order", class: "px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md transition duration-200" %>
  </div>
<% end %>
