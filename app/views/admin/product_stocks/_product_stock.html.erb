<div id="<%= dom_id product_stock %>">
  <table class="table-auto w-full text-left border-collapse">
    <thead class="bg-[#0B192C]">
      <tr>
        <th class="border px-4 py-2">Attribute</th>
        <th class="border px-4 py-2">Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="border px-4 py-2 font-medium">Product</td>
        <td class="border px-4 py-2"><%= product_stock.product_id %></td>
      </tr>
      <tr>
        <td class="border px-4 py-2 font-medium">Size</td>
        <td class="border px-4 py-2"><%= product_stock.size %></td>
      </tr>
      <tr>
        <td class="border px-4 py-2 font-medium">Amount</td>
        <td class="border px-4 py-2"><%= product_stock.amount %></td>
      </tr>
      <tr>
        <td class="border px-4 py-2 font-medium">Price</td>
        <td class="border px-4 py-2"><%= product_stock.price %></td>
      </tr>
    </tbody>
  </table>

  <% if action_name != "show" %>
    <div class="mt-6">
      <%= link_to [:admin, product_stock.product, product_stock], class: "bg-blue-600 text-white py-3 px-5 rounded-lg shadow hover:bg-blue-700 inline-flex items-center space-x-2" do %>
        <i class="fas fa-eye"></i>
        <span>Show</span>
      <% end %>

      <%= link_to edit_admin_product_product_stock_path(product_stock.product, product_stock), class: "mt-2 rounded-lg py-3 px-5 bg-[#FF6500] text-white hover:bg-[#E65B00] font-medium transition duration-200" do %>
        <i class="fas fa-edit mr-2"></i> Edit
      <% end %>
    </div>
    <hr class="mt-6">
  <% end %>
</div>
