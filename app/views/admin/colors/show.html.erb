<div class="mx-auto w-full flex max-w-2xl">
  <div class="mx-auto w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Back Button -->
  <div class="w-full flex justify-start">
    <%= link_to admin_colors_path, class: "ml-0 md:ml-2 mt-2 rounded-lg py-3 px-5 bg-[#1E3E62] text-white hover:bg-[#0B192C] font-medium transition duration-200" do %>
      <i class="fas fa-arrow-left mr-2"></i> Back
    <% end %>
  </div>

  <div class="bg-[#0B192C] p-6 rounded-lg shadow-md w-full mt-4">
    <%= render @admin_color %>
  </div>

  <!-- Products Under This Color -->
  <div class="w-full mt-6">
    <h2 class="text-xl font-bold text-white mb-4">Products Under This Brand</h2>
    <% if @admin_color.products.any? %>
      <ul class="bg-[#0B192C] p-4 rounded-lg shadow-md">
        <% @admin_color.products.each do |product| %>
          <li class="border-b border-gray-700 py-2">
            <span class="text-gray-300 font-medium"><%= product.name %></span>
            <p class="text-gray-400 text-sm mt-1"><%= product.description %></p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-400">No products are associated with this brand.</p>
    <% end %>
  </div>

  <div class="mt-4 flex flex-col md:flex-row items-center">
    <%= link_to edit_admin_color_path(@admin_color), class: "mt-2 rounded-lg py-3 px-5 bg-[#FF6500] text-white hover:bg-[#E65B00] font-medium transition duration-200" do %>
      <i class="fas fa-edit mr-2"></i> Edit
    <% end %>

    <div class="inline-block ml-0 md:ml-2 mt-2">
      <%= button_to admin_color_path(@admin_color), method: :delete, class: "rounded-lg py-3 px-5 bg-red-600 text-white hover:bg-red-700 font-medium transition duration-200" do %>
        <i class="fas fa-trash-alt mr-2"></i> Delete
      <% end %>
    </div>
  </div>
</div>
</div>
