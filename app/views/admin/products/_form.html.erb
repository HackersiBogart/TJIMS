<%= form_with(model: [:admin, admin_product], class: "contents", local: true, html: { multipart: true }) do |form| %>
  <div class="my-5">
    <%= form.label :name, class: "text-white font-medium" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-500 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-[#FF6500] transition duration-200" %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: "text-white font-medium" %>
    <%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-500 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-[#FF6500] transition duration-200" %>
  </div>

  <div class="my-5">
    <%= form.label :active, class: "text-white font-medium" %>
    <%= form.check_box :active, class: "block mt-2 h-5 w-5 accent-[#FF6500]" %>
  </div>

  <div class="my-5">
    <%= form.label :color_id, "Select Brand", class: "text-white font-medium" %>
    <%= form.collection_select :color_id, Color.all, :id, :name, { prompt: "Choose a Brand" }, { class: "block shadow rounded-md border-gray-500 text-gray-800 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-[#FF6500] transition duration-200" } %>
  </div>

  <div class="my-5">
    <%= form.label :image, class: "text-white font-medium" %>
    <%= form.file_field :image, class: "block shadow rounded-md border border-gray-500 outline-none px-3 py-2 mt-2 w-full focus:ring-2 focus:ring-[#FF6500] transition duration-200" %>
  </div>

  <div class="inline">
    <%= form.submit "Save", class: "rounded-lg py-3 px-5 bg-[#FF6500] hover:bg-[#E65B00] text-white inline-block font-medium cursor-pointer transition duration-200" %>
  </div>



<% end %>
