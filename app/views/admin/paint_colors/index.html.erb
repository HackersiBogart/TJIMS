<div class="w-full p-4 bg-[#0B192C]">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>
  
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
    <h1 class="font-bold text-2xl md:text-3xl lg:text-4xl text-white mb-4 md:mb-0">Paint Colors</h1>
    <%= link_to "Add Paint Color", new_admin_paint_color_path, class: "rounded-lg py-2 px-4 bg-[#FF6500] hover:bg-[#E65B00] text-white font-medium transition duration-200 mb-4 md:mb-0 md:ml-4 w-full md:w-auto text-center" %>
  </div>
  
  <div class="flex mt-4 flex-col md:flex-row items-start md:items-center justify-between w-full space-y-2 md:space-y-0">
    <%= form_with url: admin_paint_colors_path, method: :get, class: "flex w-full flex-col md:flex-row items-stretch space-y-2 md:space-y-0 md:space-x-2" do |form| %>
      <%= form.text_field :query, placeholder: "Search", class: "rounded border border-gray-500 text-gray-800 py-2 px-4 w-full md:w-auto focus:outline-none focus:border-[#FF6500] transition duration-200" %>
      <button type="submit" class="bg-[#FF6500] hover:bg-[#E65B00] text-white rounded-full p-2 transition duration-200 w-full md:w-auto">
        <i class="fas fa-search"></i>
      </button>
      <%= link_to "Clear", admin_paint_colors_path, method: :get, class: "bg-[#1E3E62] hover:bg-[#0B192C] text-white py-2 px-4 rounded transition duration-200 w-full md:w-auto text-center" %>
    <% end %>
  </div>
  
  <div class="flex flex-col w-full mt-6">
    <div class="overflow-x-auto">
      <div class="py-2 inline-block min-w-full">
        <table class="min-w-full bg-[#1E3E62] text-gray-300 border-collapse">
          <thead class="bg-[#0B192C]">
            <tr>
              <th scope="col" class="text-xs md:text-sm font-medium text-gray-300 px-2 md:px-6 py-2 text-left"></th>
              <th scope="col" class="text-xs md:text-sm font-medium text-gray-300 px-2 md:px-6 py-2 text-left">Name</th>
              <th scope="col" class="text-xs md:text-sm font-medium text-gray-300 px-2 md:px-6 py-2 text-left">Code</th>
              <th scope="col" class="text-xs md:text-sm font-medium text-gray-300 px-2 md:px-6 py-2 text-left">Brand</th>
              <th scope="col" class="text-xs md:text-sm font-medium text-gray-300 px-2 md:px-6 py-2 text-left">Product</th>
              <th scope="col" class="text-xs md:text-sm font-medium text-gray-300 px-2 md:px-6 py-2 text-left">Active</th>
            </tr>
          </thead>
          <tbody>
            <% @admin_paint_colors.each do |p| %>
              <tr class="bg-gray-800 border-b hover:bg-[#1E3E62] transition duration-200">
                <td class="px-2 md:px-6 py-2 whitespace-nowrap text-xs md:text-sm font-medium text-gray-300">
                  <%= p.image.attached? ? image_tag(p.image, size: "50x50") : image_tag("https://via.placeholder.com/50", size: "50x50") %>
                </td>
                <td class="px-2 md:px-6 py-2 whitespace-nowrap text-xs md:text-sm font-medium text-gray-300 underline">
                  <%= link_to p.name, admin_paint_color_path(p), class: "text-[#FF6500] hover:text-[#E65B00]" %>
                </td>
                <td class="px-2 md:px-6 py-2 whitespace-nowrap text-xs md:text-sm font-medium text-gray-300">
                  <%= p.code %>
                </td>
                <td class="px-2 md:px-6 py-2 whitespace-nowrap text-xs md:text-sm font-medium text-gray-300">
                  <% if p.color %>
                    <%= p.color.name %>
                  <% else %>
                    <p class="text-gray-500">No Brand</p>
                  <% end %>
                </td>
                <td class="px-2 md:px-6 py-2 whitespace-nowrap text-xs md:text-sm font-medium text-gray-300">
                  <% if p.product %>
                    <%= p.product.name %>
                  <% else %>
                    <p class="text-gray-500">No Product</p>
                  <% end %>
                </td>
                <td class="px-2 md:px-6 py-2 whitespace-nowrap text-xs md:text-sm font-medium text-gray-300">
                  <%= p.active ? 'Yes' : 'No' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
