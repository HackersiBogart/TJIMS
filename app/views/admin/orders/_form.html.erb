<%= form_with(model: [:admin, admin_order], class: "p-6 bg-white shadow-lg rounded-lg max-w-lg mx-auto mt-8") do |form| %>
  <% if admin_order.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-lg">
      <h2 class="font-semibold mb-2"><%= pluralize(admin_order.errors.count, "error") %> prevented this order from being saved:</h2>
      <ul class="list-disc pl-5 space-y-1">
        <% admin_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Reference Image Section -->
  <div class="my-5">
    <label class="block text-sm font-medium text-gray-700 mb-2">Reference Image:</label>
    <div class="flex items-center space-x-4">
      <% if admin_order.paint_color.image.attached? %>
        <%= image_tag(admin_order.paint_color.image, class: "w-20 h-20 rounded-lg shadow") %>
      <% else %>
        <%= image_tag("https://via.placeholder.com/80", class: "w-20 h-20 rounded-lg shadow") %>
      <% end %>
      <p class="text-gray-700 font-semibold"><%= admin_order.name %></p>
    </div>
  </div>

  <!-- Mixture Details -->
  <div id="mixture_details" class="space-y-4">
    <%= form.fields_for :mixture_details do |mixture_detail| %>
      <%= render "mixture_detail_fields", f: mixture_detail %>
    <% end %>
  </div>

  <!-- Mixture Thirds -->
  <div id="mixture_thirds" class="space-y-4">
    <%= form.fields_for :mixture_thirds do |mixture_third| %>
      <%= render "mixture_third_fields", f: mixture_third %>
    <% end %>
  </div>

  <!-- Primary Color Selector -->
  <div class="my-5">
    <%= form.label :primary_color_id, "Select Color", class: "text-gray-700 font-semibold" %>
    <% if admin_order.errors[:primary_color_id].any? %>
      <div class="text-red-500 text-sm mb-1"><%= admin_order.errors[:primary_color_id].first %></div>
    <% end %>
    <%= form.collection_select :primary_color_id, PrimaryColor.all, :id, :name,
                               { prompt: "Choose a color" },
                               { class: "block shadow-md rounded-md border px-3 py-2 mt-2 w-full text-gray-800 outline-none focus:ring-2 transition duration-200 #{'border-red-500 focus:ring-red-500' if admin_order.errors[:primary_color_id].any?}" } %>
  </div>

  <!-- Amount Field -->
  <div class="my-5">
    <%= form.label :amount, "Quantity", class: "text-gray-700 font-semibold" %>
    <% if admin_order.errors[:amount].any? %>
      <div class="text-red-500 text-sm mb-1"><%= admin_order.errors[:amount].first %></div>
    <% end %>
    <%= form.text_field :amount,
                        class: "block shadow-md rounded-md border px-3 py-2 mt-2 w-full text-gray-800 outline-none focus:ring-2 transition duration-200 #{'border-red-500 focus:ring-red-500' if admin_order.errors[:amount].any?}" %>
  </div>

  <!-- Fulfilled Checkbox -->
  <div class="mb-6">
    <%= form.label :fulfilled, class: "text-gray-700 font-semibold" %>
    <%= form.check_box :fulfilled, class: "mt-1 h-6 w-6 rounded border-gray-800 text-blue-600 focus:ring-blue-500" %>
  </div>

  <!-- Submit Button -->
  <div class="flex justify-end space-x-2 mt-4">
    <%= form.submit "Update", class: "w-full py-3 px-5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold shadow-md transition duration-300 ease-in-out" %>
  </div>
<% end %>
