<div class="mx-auto w-full flex max-w-2xl">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

        <!-- Back Button -->
    <div class="w-full flex justify-start">
      <%= link_to admin_orders_path, class: "ml-0 md:ml-2 mt-2 rounded-lg py-3 px-5 bg-[#1E3E62] text-white hover:bg-[#0B192C] font-medium transition duration-200" do %>
        <i class="fas fa-arrow-left mr-2"></i> Back
      <% end %>
    </div>

    <%= render @admin_order %>
 
<%= link_to new_admin_mixture_path(order_id: @admin_order.id), class: "bg-green-500 text-white py-2 px-4 rounded-lg shadow hover:bg-green-600 flex items-center" do %>
  <i class="fas fa-flask mr-2"></i>
  New Mixture
<% end %>





    <div class="mt-4 flex flex-col md:flex-row items-center">
      <%= link_to edit_admin_order_path(@admin_order), class: "mt-2 rounded-lg py-3 px-5 bg-[#FF6500] text-white hover:bg-[#E65B00] font-medium transition duration-200" do %>
        <i class="fas fa-edit mr-2"></i> Edit
      <% end %>

      <div class="inline-block ml-0 md:ml-2 mt-2">
        <%= button_to admin_order_path(@admin_order), method: :delete, class: "rounded-lg py-3 px-5 bg-red-600 text-white hover:bg-red-700 font-medium transition duration-200" do %>
          <i class="fas fa-trash-alt mr-2"></i> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
