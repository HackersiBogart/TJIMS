<div class="w-full p-4 bg-[#0B192C]">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl md:text-4xl text-white">Primary Colors</h1>
    <%= link_to "New Primary Color", new_admin_primary_color_path, class: "rounded-lg py-2 px-4 bg-[#FF6500] hover:bg-[#E65B00] text-white block font-medium transition duration-200" %>
  </div>

  <div class="flex mt-4 flex-col md:flex-row items-start md:items-center justify-between w-full">
    <%= form_with url: admin_primary_colors_path, method: :get, class: "flex w-full md:w-auto" do |form| %>
      <%= form.text_field :query, placeholder: "Search", class: "rounded border border-gray-500 text-gray-800 py-2 px-4 focus:outline-none focus:border-[#FF6500] transition duration-200" %>
      <button type="submit" class="ml-2 bg-[#FF6500] hover:bg-[#E65B00] text-white rounded-full p-2 transition duration-200">
        <i class="fas fa-search"></i>
      </button>
      <%= link_to "Clear", admin_primary_colors_path, method: :get, class: "ml-2 cursor-pointer bg-[#1E3E62] hover:bg-[#0B192C] text-white py-2 px-4 rounded transition duration-200" %>
    <% end %>
  </div>

  <div class="flex flex-col w-full mt-6">
    <div class="overflow-x-auto">
      <div class="py-2 inline-block min-w-full">
        <table class="min-w-full bg-[#1E3E62] text-gray-300 border-collapse">
          <thead class="bg-[#0B192C]">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-300 px-6 py-4 text-left">Image</th>
              <th scope="col" class="text-sm font-medium text-gray-300 px-6 py-4 text-left">Name</th>
              <th scope="col" class="text-sm font-medium text-gray-300 px-6 py-4 text-left">Code</th>
              <th scope="col" class="text-sm font-medium text-gray-300 px-6 py-4 text-left">Price</th>
              <th scope="col" class="text-sm font-medium text-gray-300 px-6 py-4 text-left">Stocks</th>
              <th scope="col" class="text-sm font-medium text-gray-300 px-6 py-4 text-left">Active</th>
            </tr>
          </thead>
          <tbody>
            <% @admin_primary_colors.each do |primary_color| %>
              <tr class="bg-gray-800 border-b hover:bg-[#1E3E62] transition duration-200">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300">
                  <%= primary_color.image.attached? ? image_tag(primary_color.image, size: "50x50") : image_tag("https://via.placeholder.com/50", size: "50x50") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300 underline">
                  <%= link_to primary_color.color_name, admin_primary_color_path(primary_color), class: "text-[#FF6500] hover:text-[#E65B00]" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300">
                  <%= primary_color.color_code %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300">
                  â‚±<%= primary_color.price %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300">
                  <%= primary_color.stocks %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300">
                  <%= primary_color.active ? 'Yes' : 'No' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
