<div id="<%= dom_id primary_color %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Color name:</strong>
    <%= primary_color.color_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Color code:</strong>
    <%= primary_color.color_code %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= primary_color.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Stocks:</strong>
    <%= primary_color.stocks %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Active:</strong>
    <%= primary_color.active %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product", [:admin, primary_color], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this product", edit_admin_primary_color_path(primary_color), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>


</div>
