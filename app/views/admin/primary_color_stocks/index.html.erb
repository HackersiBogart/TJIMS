<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Primary color stocks" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Primary color stocks</h1>
    <%= link_to "New primary color stock", new_admin_primary_color_primary_color_stock_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="admin_primary_color_stocks" class="min-w-full">
    <% @admin_primary_color_stocks.each do |admin_primary_color_stock| %>
      <%= render admin_primary_color_stock %>
      <p>
        <%= link_to "Show this primary color stock", admin_primary_color_stock, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
