<%= form_with(model: [:admin, @primary_color, admin_primary_color_stock], class: "contents") do |form| %>
  <% if admin_primary_color_stock.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(admin_primary_color_stock.errors.count, "error") %> prohibited this admin_primary_color_stock from being saved:</h2>

      <ul>
        <% admin_primary_color_stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <!-- Size Field -->
  <div class="my-5">
    <%= form.label :size %>
    <%= form.text_field :size, class: "block shadow rounded-md border border-gray-400 text-gray-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <!-- Quantity Field -->
  <div class="my-5">
    <%= form.label :quantity, "Quantity" %>
    <%= form.number_field :quantity, class: "block shadow rounded-md border border-gray-400 text-gray-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <!-- Price Field -->
  <div class="my-5">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, class: "block shadow rounded-md border border-gray-400 text-gray-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <!-- Submit Button -->
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
