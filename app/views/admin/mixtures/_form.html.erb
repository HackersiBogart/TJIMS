
<%= form_with(model: [:admin, admin_mixture], class: "contents") do |form| %>
  <% if admin_mixture.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(admin_mixture.errors.count, "error") %> prohibited this admin_mixture from being saved:</h2>

      <ul>
        <% admin_mixture.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


   <div class="my-5">
  <%= form.label :order_id, "Select Order" %>
  <%= form.collection_select :order_id, Order.all, :id, :name, prompt: "Choose an order", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
</div>

  <div class="my-5">
    <%= form.label :primary_color_id, "Select Color" %>
    <%= form.collection_select :primary_color_id,PrimaryColor.all, :id, :color_name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
