<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Mixtures</h1>
    <%= link_to "New Mixture", new_admin_mixture_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex mt-4 flex-col md:flex-row items-start md:items-center justify-between w-full">
    <%= form_with url: admin_mixtures_path, method: :get, class: "flex" do |form| %>
      <%= form.text_field :query, placeholder: "Search Mixtures", class: "rounded border-gray-500 text-gray-800" %>
      <%= form.submit "Submit", class: "cursor-pointer bg-gray-500 ml-2 hover:bg-gray-600 text-white py-2 px-4 rounded" %>
    <% end %>
    <%= form_with url: admin_mixtures_path, method: :get, class: "flex" do |form| %>
      <%= form.submit "Clear", class: "cursor-pointer bg-gray-500 ml-0 md:ml-2 mt-2 md:mt-0 hover:bg-gray-600 text-white py-2 px-4 rounded" %>
    <% end %>
  </div>

  <div class="flex flex-col w-full mt-4">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">ID</th>
                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @admin_mixtures.each do |mixture| %>
                <tr class="bg-gray-50 border-b">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                    <%= mixture.id %>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                    <%= link_to "Show", admin_mixture_path(mixture), class: "ml-2 rounded-lg py-2 px-4 bg-gray-100 text-gray-800 font-medium" %>
                    <%= link_to "Destroy", admin_mixture_path(mixture), method: :delete, data: { confirm: "Are you sure?" }, class: "ml-2 rounded-lg py-2 px-4 bg-red-500 text-white font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
