<h1>Color Show Page</h1>
<div class="min-h-screen flex justify-center">
  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
    <% if @products.blank? %>
  <p class="text-2xl text-left text-gray-800">No Color found</p>
<% else %>
  <% @products.each do |product| %>
    <%= link_to product_path(product) do %>
      <div class="max-w-xs flex flex-col p-4 justify-center items-center">
        <%= product.image.attached? ? image_tag(product.image, size: "250x250", class: "rounded") : image_tag("http://via.placeholder.com/250", class: "rounded") %>
      </div>
    <% end %>
  <% end %>
<% end %>

