<h1 class="text-4xl font-bold text-center mb-8">Products</h1>

<div class="min-h-screen flex justify-center">
  <div class="flex flex-wrap mt-6 gap-6 flex-grow justify-center items-start">
    <% if @products.blank? %>
      <p class="text-2xl text-left text-gray-800">No Products found</p>
    <% else %>
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="max-w-xs flex flex-col p-4 justify-center items-center border rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200">
            <div class="w-64 h-64 flex justify-center items-center bg-gray-200 rounded overflow-hidden">
              
              <%= product.image.attached? ? image_tag(product.image, size: "250x250") : image_tag("https://via.placeholder.com/50", size: "250x250") %>
            </div>
            <h2 class="mt-4 text-lg font-semibold text-gray-800"><%= product.name %></h2>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
