<h1 class="text-4xl font-bold text-center mb-10 text-orange-600">Color Show Page</h1>




<div class="min-h-screen flex justify-center">
  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
    <% if @paint_colors.empty? %>
      <p class="text-2xl text-left text-gray-800">No Colors found</p>
    <% else %>
      <% @paint_colors.each do |paint_color| %>
        <%= link_to paint_color_path(paint_color) do %>
          <div class="max-w-xs flex flex-col p-4 justify-center items-center border border-gray-300 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200">
            <%= paint_color.image.attached? ? image_tag(paint_color.image, size: "250x250", class: "rounded") : image_tag("http://via.placeholder.com/250", class: "rounded") %>
            <p class="mt-4 font-medium text-gray-800 text-center"><%= paint_color.name %></p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
